.widget-dsl {
  &__list {
    margin: 0
    padding: 0
    &__item {
      position: relative
      list-style: none
    }
  }
  &__item {
    &__link {
      text-decoration: none !important;
      display: block;
      height: 70px;
      padding: 15px;
      border-bottom: 1px solid #ececec;

      &:hover{
        background: #f3f5f7;
      }

      &__left {
        float: left
        width: 60px
      }

      &__user-picture{
        margin: 0 15px
        width: 40px
        height: 40px
        border-radius 50%
        box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
        color #fff
        background #6c6ac5;
      }

      &__user-picture > div {
        text-align center
        font-size 20px
        line-height 40px
        text-shadow: 1px 1px #5856af;
      }
      &__username {
        line-height 40px
        margin: 0 0 0 75px
      }
    }
  }
}
