  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

transition()
  -webkit-transition arguments
  -moz-transition arguments
  transition arguments

.widget-dsmsl {
  background: #e6eaec
  &__content-loading{
    padding: 15px
    color: #999
    text-align: center
  }
  &__list {
    margin: 0
    padding: 0 0 110px 0

    &__item {
      position: relative
      list-style: none
      transition: background-color cubic-bezier(0.5, 0, 1, 1) 0.5s;
    }
  }
  &__item {
    &--not-read{
      background-color: #dcdfe2;
    }
    &__container {
      float: left
      margin 10px 0

      &__left {
        width: 65px
        float: left
      }
      &__right {
        background: #fff
        box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
        max-width: 500px
        padding: 15px
        margin: 0 40px 0 65px
        min-width: 350px;
      }
      &__username {
        margin: 0 15px
        width: 40px
        height: 40px
        border-radius 50%
        box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
        color #fff
        background #6c6ac5;
      }
      &__username > div {
        text-align center
        font-size 20px
        line-height 40px
        text-shadow: 1px 1px #5856af;
      }
      &__text {
        padding: 0 0 5px 0;
      }
      &__createdAt {
        text-align right
        font-size 12px;
        color: #999
      }
    }

    &__container--owner {
      float: right
      box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
      max-width: 500px
      padding: 15px
      margin-right 15px
      margin-left 40px
      min-width: 350px;
      background: #f0f4ff
    }
    &__container--owner &__container  {
      &__createdAt {
        text-align left
      }
    }
  }
  &__send-message{
    position fixed
    bottom 0
    padding 0
    background #fff
    box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.15);
    z-index: 50;
    &__content{
      margin: 0 70px 0 70px
      &__textarea{
        border: none;
        box-shadow: none !important;
        resize: none;
        margin: 7px 0 7px 0;
        border-radius: 0;
        border-top: 1px solid #fff;
        border-bottom: 1px solid #999;
        min-height: 90px;
        &:focus{
          border-top: 0 solid #fff;
          border-bottom: 2px solid #337ab7;
        }
      }
    }
    &__button{
      float: right
      .btn-primary{
        padding: 10px 12px 12px 10px;
        height: auto;
        margin: 16px 16px 0 0;
        width: auto;
        line-height: 0;
        border-radius: 50%;
      }
    }
  }
}

