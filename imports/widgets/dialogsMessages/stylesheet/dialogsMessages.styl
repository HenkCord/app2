  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

.widget-dsms {
  background: #e6eaec

  &__list {
    margin: 0;
    padding: 0;
    &__item {
      position: relative
      list-style: none
    }
  }
  &__item {
    &__container {
      float: left
      margin 10px 0

      &__left {
        width: 65px
        float: left
      }
      &__right {
        background: #fff
        box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
        max-width: 500px
        padding: 15px
        margin: 0 40px 0 65px
        min-width: 350px;
      }
      &__username {
        margin: 0 15px
        width: 40px
        height: 40px
        border-radius 50%
        box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
        color #fff
        background #6c6ac5;
      }
      &__text {
        padding: 0 0 5px 0;
      }
      &__createdAt {
        text-align right
        font-size 12px;
        color: #999
      }
    }

    &__container--owner {
      float: right
      box-shadow 0 4px 5px rgba(0, 0, 0, 0.21)
      max-width: 500px
      padding: 15px
      margin-right 15px
      margin-left 40px
      min-width: 350px;
      background: #f0f4ff
    }
    &__container--owner &__container  {
      &__createdAt {
        text-align left
      }
    }
  }
}

